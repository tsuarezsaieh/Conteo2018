doctype html
include mixins
html
  include head
  body
    section.hero.is-medium.is-primary
      .hero-head
        .container#header
          a(
            href='http://www.elpuclitico.cl/inicio'
            target='_blank'
          )
            span#logo
              include logo-elp.svg
          span Primera Vuelta FEUC 2018
      #bar-graph-hero.hero-body
        .container
          .columns
            .column#bind-summary-lista
              h2.title.is-4 Total Lista FEUC
              .bar-graph
                +bar-item('1a', 'mgpc', 'mg')
                +bar-item('Decrecer', 'decrecerpc', 'decrecer')
                +bar-item('NAU', 'naupc', 'nau')
                +bar-item('Solidaridad', 'sddpc', 'sdd')
            .column#bind-summary-sup
              h2.title.is-4 Total Consejero Superior
              .bar-graph
                +bar-item('1a', 'mgpc', 'mg')
                +bar-item('Decrecer', 'decrecerpc', 'decrecer')
                +bar-item('NAU', 'naupc', 'nau')
                +bar-item('Solidaridad', 'sddpc', 'sdd')
                +bar-item('UC Pública', 'iapc', 'ia')
    section.section
      .container
        include refresh-notification
        include error-loading-notification
        h2.title.is-2 Detalle
          = ' '
          span.tag.update-notif  Actualizando…
        include total
        include vote-message
        include mesas
        include territorios
        include territoriales
        // include participativo
        .columns
          include escrutadas
          include participacion
    include footer
    include analytics
